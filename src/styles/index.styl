primaryColor = #0070ff

*, *::before, *::after
  box-sizing border-box

html, body
  margin 0
  padding 0
  height 100%

body, #result
  display flex
  flex-direction column
  align-items center

body, textarea
  width 100%
  background #fff
  color #333
  text-align center
  font-family 'Tahoma', 'Helvetica Neue', sans-serif
  line-height 1.3em

.hidden
  display none

h1
  margin-top 1em
  margin-bottom 2em
  color primaryColor
  font-size 2em
  line-height 1.2em

textarea
  padding 0.5em 0
  min-width 1.5em
  outline none
  border none
  border-top 2px solid primaryColor
  border-bottom 2px solid primaryColor
  border-radius 0
  background none
  font-family monospace

button, a
  padding 0.5em
  outline none
  border none
  border-radius 5px
  background #0070ff
  color #fff
  text-decoration none
  text-transform uppercase
  letter-spacing 0.05em
  font-size 0.8em
  cursor pointer

  &:hover
    border-color lighten(primaryColor, 10%)
    background lighten(primaryColor, 10%)

#result
  a
    min-width 50%

  svg
    float left
    margin-top 0.3em
    height 1.2em

  div
    margin-top 4em
    padding 1em

.clear-container
  position relative
  height 6.5em

#clear
  margin-top -2px
  padding 0.2em 1em
  border 2px solid primaryColor
  border-top-left-radius 0
  border-top-right-radius 0
  background transparent
  color primaryColor